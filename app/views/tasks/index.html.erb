<% if user_signed_in? %>

  <h1>Tasks for <%= Time.zone.today %></h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr class="table-dark">
        <th>Description</th>
        <th>Status</th>
        <th>Estimated time to finish</th>
        <!-- <th>User ID</th> -->
    </thead>

    <tbody>
      
        <% @tasks.each do |task| %>
          <% if current_user == task.user %>
            <tr>
              <td><%= link_to task.description, task,
                                                class:"text-decoration-none
                                                      text-reset" %></td>
              <!--<td><%= task.description %></td>-->
              <td><%= task.status %></td>
              <td><%= task.estimated_time_to_finish %></td>
             <!--  <td><%= task.user_id%></td> -->
              <!--<td><%= link_to 'Show', task %></td>-->
              <!--<td><%= link_to 'Edit', edit_task_path(task) %></td>-->
              <!-- <td><%= link_to 'Delete', task, method: :delete, 
                                                data: { confirm: 'Are you sure?' },
                                                class:"btn btn-outline-danger" %> -->    
              </td>
              
            </tr>
          <% end %>  
        <% end %>  
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_task_path, class:"btn btn-secondary" %>

<% else %>
  <br/>
  <h1>To-Do List</h1>
  <p>Prioritize your priorities!!</p>

<% end %>
